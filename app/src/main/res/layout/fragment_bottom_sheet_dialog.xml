<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/dp_10"
    android:layout_margin="@dimen/dp_10"
    android:backgroundTint="@color/bank_light_blue"
    tools:context=".webServices.fragment.BottomSheetDialogFragmentPractice">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_forward"
            android:layout_margin="@dimen/dp_10"
            android:textSize="@dimen/_20sp"
            android:textColor="@color/black"
            android:background="@color/off_white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@string/tv_forward"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_reply"
            android:layout_margin="@dimen/dp_10"
            android:background="@color/off_white"
            android:textSize="@dimen/_20sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/tv_forward"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@string/tv_reply"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_reply_to_all"
            android:layout_margin="@dimen/dp_10"
            android:background="@color/off_white"
            android:textSize="@dimen/_20sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/tv_reply"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@string/tv_reply_to_all"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>