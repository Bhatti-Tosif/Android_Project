<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".uiwidgets.AllWidgets">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:id="@+id/btn_textView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        android:text="@string/btn_textview"/>

    <Button
        android:id="@+id/buttonPractice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Button Practice"
        app:layout_constraintEnd_toEndOf="@+id/btn_textView"
        app:layout_constraintStart_toStartOf="@+id/btn_textView"
        app:layout_constraintTop_toBottomOf="@+id/btn_textView" />

</androidx.constraintlayout.widget.ConstraintLayout>