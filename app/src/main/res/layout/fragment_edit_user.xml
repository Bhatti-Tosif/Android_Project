<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".webServices.fragment.EditUserFragment">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:id="@+id/et_name"
        app:boxBackgroundMode="outline"
        style="@style/ThemeOverlay.Material3.AutoCompleteTextView.OutlinedBox"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginHorizontal="@dimen/dp_10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/et_userName"
            android:hint="@string/txt_name"
            tools:text="Enter Name"
            android:autofillHints="Name"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:id="@+id/et_email"
        app:boxBackgroundMode="outline"
        style="@style/ThemeOverlay.Material3.AutoCompleteTextView.OutlinedBox"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginHorizontal="@dimen/dp_10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_name">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/hint_email_address"
            android:id="@+id/et_emailID"
            tools:text="Enter Email"
            android:autofillHints="Name"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/button_48dp"
        android:id="@+id/btn_updateUser"
        android:layout_marginTop="@dimen/dp_20"
        android:text="@string/bnt_update_user"
        android:textColor="@color/white"
        android:layout_marginBottom="@dimen/dp_20"
        android:backgroundTint="@color/bank_navy_blue"
        app:layout_constraintStart_toStartOf="@id/et_name"
        app:layout_constraintEnd_toEndOf="@id/et_name"
        app:layout_constraintTop_toBottomOf="@id/et_email"/>

    <Button
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/button_48dp"
        android:id="@+id/btn_dismiss"
        android:layout_marginTop="@dimen/dp_10"
        android:text="@string/txt_dismiss"
        android:textColor="@color/white"
        android:layout_marginBottom="@dimen/dp_20"
        android:backgroundTint="@color/bank_navy_blue"
        app:layout_constraintStart_toStartOf="@id/et_name"
        app:layout_constraintEnd_toEndOf="@id/et_name"
        app:layout_constraintTop_toBottomOf="@id/btn_updateUser"/>


</androidx.constraintlayout.widget.ConstraintLayout>