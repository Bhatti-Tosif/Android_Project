<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="buttonText"
            type="com.example.android_practice.intent_practice.button_recycle.ActivityButtonModal" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:id="@+id/btn_recycle"
            style="@style/Widget.Material3.Button"
            tools:text="Enter Name Here"
            android:text="@{buttonText.btnText}"
            android:textSize="@dimen/_15sp"
            android:layout_marginHorizontal="@dimen/dp_10"
            android:backgroundTint="@color/bank_navy_blue"
            app:cornerRadius="@dimen/dp_10"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginVertical="@dimen/dp_10"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>