<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".intent_practice.fragment.FragmentDataPassing1">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/dp_5"
        android:layout_margin="@dimen/dp_10"
        app:cardElevation="@dimen/dp_10">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue_bank">

            <TextView
                android:id="@+id/tv_fragment_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/_20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_margin="@dimen/dp_10"
                android:text="@string/tv_fragment_card" />

            <TextView
                android:id="@+id/tv_dataReceive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@+id/tv_fragment_card"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_margin="@dimen/dp_10"
                android:text="@string/tv_received_data" />

            <TextView
                android:id="@+id/tv_received_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red_color"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/dp_10"
                app:layout_constraintTop_toTopOf="@id/tv_dataReceive"
                app:layout_constraintStart_toEndOf="@+id/tv_dataReceive"
                tools:text="Received Data" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_48dp"
                android:id="@+id/et_full_name"
                android:hint="@string/hint_full_name"
                android:layout_margin="@dimen/dp_10"
                app:layout_constraintTop_toBottomOf="@+id/tv_dataReceive"/>

            <Button
                android:id="@+id/btn_send_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:text="@string/btn_send_data"
                android:layout_marginBottom="@dimen/dp_20"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_full_name" />

            <Button
                android:id="@+id/btn_send_dataTo_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="@string/btn_send_to_activity"
                android:layout_marginBottom="@dimen/dp_10"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_send_data" />




        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>