<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main_screen_handle.FirstScreen">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_practice"
        android:layout_marginStart="@dimen/dp_20"
        android:text="@string/tv_android_practice"
        android:textColor="@color/bank_navy_blue"
        android:textStyle="bold"
        android:textSize="@dimen/_25sp"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:id="@+id/rv_button_list"
        android:layout_marginVertical="@dimen/dp_10"
        app:layout_constraintTop_toBottomOf="@id/tv_practice"
        tools:listitem="@layout/item_button_list"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>