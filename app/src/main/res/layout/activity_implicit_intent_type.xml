<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".intent_practice.ImplicitIntentType">

    <Button
        android:id="@+id/btn_web"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Web Open"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dp_60"
        tools:layout_editor_absoluteX="146dp"
        tools:layout_editor_absoluteY="102dp" />

    <Button
        android:id="@+id/btn_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Map open"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_web"
        app:layout_constraintStart_toStartOf="@+id/btn_web"
        app:layout_constraintEnd_toEndOf="@+id/btn_web" />

    <Button
        android:id="@+id/btn_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Message Open"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_map"
        app:layout_constraintStart_toStartOf="@+id/btn_web"
        app:layout_constraintEnd_toEndOf="@+id/btn_web" />

    <Button
        android:id="@+id/btn_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Open"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_message"
        app:layout_constraintStart_toStartOf="@+id/btn_web"
        app:layout_constraintEnd_toEndOf="@+id/btn_web" />

</androidx.constraintlayout.widget.ConstraintLayout>