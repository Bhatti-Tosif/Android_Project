<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".intent_practice.ExplicitIntentDataPassing">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_enter_name"
        android:hint="Enter Name"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="@dimen/dp_60"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_enter_surname"
        android:hint="Enter Surname"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/et_enter_name"/>

    <Button
        android:id="@+id/btn_send_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Data"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/et_enter_surname"
        app:layout_constraintStart_toStartOf="@+id/et_enter_surname"
        app:layout_constraintEnd_toEndOf="@+id/et_enter_surname"/>

    <TextView
        android:id="@+id/tv_userID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/btn_send_data"
        app:layout_constraintStart_toStartOf="@+id/et_enter_surname"
        app:layout_constraintEnd_toEndOf="@+id/et_enter_surname" />


</androidx.constraintlayout.widget.ConstraintLayout>